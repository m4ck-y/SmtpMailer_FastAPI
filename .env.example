# === CONFIGURACIÓN DE LA API ===
DEBUG=true
ENVIRONMENT=development

# === CONFIGURACIÓN SMTP (OBLIGATORIAS) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_FROM_EMAIL=tu-email@gmail.com
SMTP_FROM_NAME=SmtpMailer API

# === CONFIGURACIÓN DE CORS ===
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# === CONFIGURACIÓN DE TIMEOUTS ===
SMTP_TIMEOUT=30

# ========================================
# VARIABLES NO UTILIZADAS (COMENTADAS)
# ========================================

# === CONFIGURACIÓN DE API AVANZADA ===
# Para usar en uvicorn.run() o configuración de servidor
# API_HOST=127.0.0.1
# API_PORT=8000
# LOG_LEVEL=INFO

# === CONFIGURACIÓN DE SEGURIDAD ===
# Para implementar autenticación y rate limiting con slowapi o similar
# API_KEY_ENABLED=false
# API_KEY=tu-api-key-secreta
# RATE_LIMIT_ENABLED=true
# MAX_REQUESTS_PER_MINUTE=100
# MAX_REQUESTS_PER_HOUR=1000

# === CONFIGURACIÓN DE PLANTILLAS ===
# Para personalizar templates HTML de emails (usar en Jinja2 context)
# COMPANY_NAME=Mi Empresa
# COMPANY_LOGO_URL=https://mi-empresa.com/logo.png
# SUPPORT_EMAIL=soporte@mi-empresa.com
# WEBSITE_URL=https://mi-empresa.com

# === CONFIGURACIÓN DE CACHE ===
# Para implementar cache de templates con lru_cache o Redis
# CACHE_TTL_SECONDS=300
# CACHE_ENABLED=true

# === CONFIGURACIÓN DE TIMEOUTS AVANZADOS ===
# Para timeouts de requests HTTP con httpx o aiohttp
# REQUEST_TIMEOUT=60